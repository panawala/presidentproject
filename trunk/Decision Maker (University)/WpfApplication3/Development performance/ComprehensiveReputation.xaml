                <CheckBox Content="公益基金捐赠" FontSize="16">
                </CheckBox>
                <CheckBox Content="海外华侨捐赠" FontSize="16">
                </CheckBox>
                <CheckBox Content="同济学子捐赠" FontSize="16">
