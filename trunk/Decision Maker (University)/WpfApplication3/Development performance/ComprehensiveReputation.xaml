                        <ListBox Name="L_shehuijuanzeng" ItemTemplate="{StaticResource listboxTemplate2}"  ItemsSource="{Binding}" >
                        </ListBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
   
   
        <Grid Grid.Column="1" Name="G_R_xueshushengyu" Visibility="Collapsed" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="60*"/>
         
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" Grid.Row="0" Margin="10">
                <Label Content="推荐关键词" FontSize="18" FontWeight="Bold" />
                <CheckBox Content="同济大学" FontSize="16">
                </CheckBox>
                <CheckBox Content="同济设计" FontSize="16">
                </CheckBox>
                <CheckBox Content="同济新闻" FontSize="16">
                </CheckBox>
                <CheckBox Content="同济建筑" FontSize="16">
                </CheckBox>
            </StackPanel>
            <Button Grid.Row="1" Content="搜索" FontSize="16" Click="S_xueshushengyu_Click">
            </Button>
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <WebBrowser Name="Q_xueshushengyu" Width="310" Height="570">
                </WebBrowser>
            </StackPanel>         
        </Grid>
        <Grid Grid.Column="1" Name="G_R_shehuishengyu" Visibility="Visible" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="60*"/>
         
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" Grid.Row="0" Margin="10">
                <Label Content="推荐关键词" FontSize="18" FontWeight="Bold" />
                <CheckBox Content="知名人士捐赠" FontSize="16">
