                </CheckBox>
                <CheckBox Name="renwenshehui"  Content="个人捐赠" FontSize="16">
                </CheckBox>
            </StackPanel>
            <Button Grid.Row="1" Content="搜索" FontSize="16" Click="S_shehuijuanzeng_Click">
