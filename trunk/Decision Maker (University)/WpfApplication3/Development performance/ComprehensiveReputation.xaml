      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="972" d:DesignWidth="1265"
	Title="ComprehensiveReputation" Loaded="Page_Loaded">

    <Page.Resources>
        <DataTemplate x:Key="listviewTemplate">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Width="280">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding Path=title}" FontSize="18" Foreground="Blue" />
                    <TextBlock Grid.Column="1" Text="{Binding Path=time}" FontSize="16" Foreground="#FF909A21" />
                </Grid>
                <TextBlock Grid.Row="1" Text="{Binding Path=description}" TextWrapping="Wrap" FontSize="12" Width="280" Foreground="#FF1ABA1A" />
