                    <Rectangle.Triggers>
                        <EventTrigger RoutedEvent="Page.Loaded">
                            <BeginStoryboard>
                                <Storyboard  >
                                    <DoubleAnimation  Storyboard.TargetName="MyRectangle"  Storyboard.TargetProperty="Width"  From="1" To="220" Duration="0:0:1" />
