<UserControl x:Class="WpfApplication3.Control.CxCloseButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Width="18" Height="18" Cursor="Hand">
    <Grid x:Name="LayoutRoot" >
        <Border
            Width="18"
            Height="18"
            CornerRadius="12"
            x:Name="border"
            MouseEnter="Border_MouseEnter"
            MouseLeave="border_MouseLeave"

            >
            <Canvas Width="11" Height="11">
                <Polyline x:Name="line1" Points="2,2 9,9"  Stroke="{StaticResource NavigationPanelArrowBrush}" StrokeThickness="2" />
                <Polyline x:Name="line2" Points="2,9 9,2" Stroke="{StaticResource NavigationPanelArrowBrush}" StrokeThickness="2"/>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
